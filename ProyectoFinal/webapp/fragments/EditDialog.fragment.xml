<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" >

    <Dialog id="idDialogEdit" title="{i18n>EditForm}">
       	<f:SimpleForm>
			<f:content>
                <Label text="{i18n>Product}" />
                <Input value="{ProductSelectIdModel>/ProductName}"/>

                <Label text="{i18n>Description}" />
                <Input value="{CategoryModel>/Description}"/>

                <Label text="{i18n>Supplier}" />
                <Input value="{SupplierModel>/CompanyName}" />

                <Label text="{i18n>SupplierContact}" />
                <Input value="{SupplierModel>/ContactName}" />

                <Label text="{i18n>SupplierAddress}" />
                <Input value="{SupplierModel>/Address}" />

			</f:content>
		</f:SimpleForm>
        <Button text="{i18n>Accept}" width="45%" press="onCloseDialog" type="Accept" class="sapUiSmallMarginBottom" />
        <Button text="{i18n>Close}" width="45%" press="onCloseDialog" type="Reject" class="sapUiSmallMarginBottom"/>
    </Dialog>

</core:FragmentDefinition>